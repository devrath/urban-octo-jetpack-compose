<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:fillViewport="true"
    android:padding="@dimen/selection_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnHelloWorldId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_world" />

        <Button
            android:id="@+id/btnDecoupleComposableId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/decoupling_composables" />

        <Button
            android:id="@+id/btnButtonComposableId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_composable_demo" />

        <Button
            android:id="@+id/btnModifiersId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/modifiers_demo" />

        <Button
            android:id="@+id/btnApplyStyleId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/apply_style" />

        <Button
            android:id="@+id/btnSurfaceComposableId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/surface_composable" />

        <Button
            android:id="@+id/btnWrapComposableId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wrapping_the_composable" />

        <Button
            android:id="@+id/btnAlignComposableId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/align_the_composable" />

        <Button
            android:id="@+id/btnMultipleComposableId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/multiple_composables" />

        <Button
            android:id="@+id/btnReuseComposableId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reusing_composable" />

        <Button
            android:id="@+id/btnArrangeAlignComposableId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/arrange_align_composable" />

        <Button
            android:id="@+id/btnNestedViewComposableId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nested_views_composable" />

        <Button
            android:id="@+id/btnDynamicViewsId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dynamic_views" />

        <Button
            android:id="@+id/btnUpdateStateId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/updating_state" />

        <Button
            android:id="@+id/btnStateUpdateUsingTimerId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/state_updation_using_timer" />

    </LinearLayout>

</ScrollView>